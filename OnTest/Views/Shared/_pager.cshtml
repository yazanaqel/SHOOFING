@model Pager


<div class="container">
	@if (Model.TotalPages > 0)
	{
		<ul class="pagination justify-content-end">

			@if (Model.CurrentPage > 1)
			{
				<li class="page-item">
					<a class="page-link" asp-controller="Products" asp-action="Index" asp-route-page="1">First</a>
				</li>
				<li class="page-item">
					<a class="page-link" asp-controller="Products" asp-action="Index" asp-route-page="@(Model.CurrentPage-1)">Previous</a>
				</li>
			}

			@for (var navPage = Model.StartPage; navPage <= Model.EndPage; navPage++)
			{
				<li class="page-item @(navPage == Model.CurrentPage?"active":"")">
					<a class="page-link" asp-controller="Products" asp-action="Index" asp-route-page="@navPage">@navPage</a>
				</li>
			}

			@if (Model.CurrentPage < Model.TotalPages)
			{
				<li class="page-item">
					<a class="page-link" asp-controller="Products" asp-action="Index" asp-route-page="@(Model.CurrentPage+1)">Next</a>
				</li>
				<li class="page-item">
					<a class="page-link" asp-controller="Products" asp-action="Index" asp-route-page="@(Model.TotalPages)">Last</a>
				</li>
			}
		</ul>
	}
</div>
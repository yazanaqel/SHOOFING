@model OnTest.Models.Product

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<section style="background-color: #eee;">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 col-xl-4">
                <div class="card" style="border-radius: 15px;">
                    <div class="bg-image hover-overlay ripple ripple-surface ripple-surface-light"
                         data-mdb-ripple-color="light">
                        <img src="@Model.ImageURL"
                             style="border-top-left-radius: 15px; border-top-right-radius: 15px;" class="img-fluid"
                             alt="Laptop" />
                        <a href="#!">
                            <div class="mask"></div>
                        </a>
                    </div>
                    <div class="card-body pb-0">
                        <div class="d-flex justify-content-between">
                            <div>
                                <p class="text-dark">@Html.DisplayFor(model => model.Name)</p>
                                <p class="small text-muted">@Html.DisplayFor(model => model.ProductCategory)</p>
                            </div>
                        </div>
                    </div>
                    <hr class="my-0" />
                    <div class="card-body pb-0">
                        <div class="d-flex justify-content-between">
                            <p class="text-dark">@Model.Price.ToString("c")</p>
                            <p class="text-dark">@Html.DisplayFor(model => model.ProductCompany)</p>
                        </div>
                        <p class="small text-muted">@Html.DisplayFor(model => model.Description)</p>
                    </div>
                    <hr class="my-0" />
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center pb-2 mb-1">
                            <a asp-action="Index" class="text-dark fw-bold">Cancel</a>
                            <a class="btn btn-success" asp-controller="Orders" asp-action="AddToCart" asp-route-id="@Model.Id">Add to Cart</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
